{% extends "base.html.twig" %}

{% block body %}

    <main role="main" class="container">
        <div class="jumbotron">
            <h1>Product Management Website </h1>
            <p class="lead">This is an example demo for a product management website, where you can add, delete and update products and orders </p>
            <a class="btn btn-lg btn-primary" href="{{ path('product_index') }}" role="button">View Our Products</a>
            <a class="btn btn-lg btn-warning" href="#" role="button">Add Order</a>
        </div>
    </main>

    <main role="main" class="container">
        <div class="jumbotron">
            <h3>Latest Added Products</h3>
            {% for product in products %}
            <div class="card" style="display: inline-flex; margin: 40px;">
                <img src="{{ product.imageURL }}" class="card-img-top">
                <div class="card-body">
                    <a href="{{ path('product_show', {'id': product.id}) }}" style="text-decoration: none"><h5 class="card-title" style="font-weight: bold">{{ product.name }} </h5></a>
                    <h3 class="card-title" style="color: darkblue; font-weight: bold"> {{ product.price }} $</h3>
                </div>
            </div>
            {% endfor %}
        </div>
    </main>

{% endblock %}
